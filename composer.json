{
    "name": "jorpo/concerto-application",
    "description": "Application boundary pattern",
    "type": "concerto-library",
    "license": "GNU GPLv3",
    "authors": [
        {
            "name": "John Porter",
            "email": "john@designermonkey.co.uk"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin"
    },
    "require": {
        "jorpo/enum": "@dev",
        "jorpo/object-access": "@dev",
        "php": "^7.4 || ^8.0",
        "php-ds/php-ds": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Jorpo\\Concerto\\Application\\": [
                "src"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "vimeo/psalm": "^4.7"
    },
    "autoload-dev": {
        "psr-4": {
            "Jorpo\\Concerto\\Application\\": [
                "tests"
            ]
        }
    }
}
